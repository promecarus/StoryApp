<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/mcv_item_story"
	style="?attr/materialCardViewElevatedStyle"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginHorizontal="@dimen/margin_medium"
	android:layout_marginTop="@dimen/margin_medium"
	app:strokeWidth="1dp">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:paddingVertical="@dimen/padding_medium">

		<TextView
			android:id="@+id/tv_item_name"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingHorizontal="@dimen/padding_medium"
			android:textAppearance="?attr/textAppearanceLabelMedium"
			tools:text="Promecarus" />

		<TextView
			android:id="@+id/tv_item_created"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/margin_medium"
			android:paddingHorizontal="@dimen/padding_medium"
			android:textAppearance="?attr/textAppearanceLabelMedium"
			android:textColor="?attr/colorOutline"
			tools:ignore="TextContrastCheck"
			tools:text="2 minutes ago" />

		<ImageView
			android:id="@+id/iv_item_photo"
			android:layout_width="@dimen/image_dimension"
			android:layout_height="@dimen/image_dimension"
			android:layout_gravity="center"
			android:layout_marginBottom="@dimen/margin_medium"
			android:contentDescription="@string/story_photo"
			android:scaleType="centerCrop"
			tools:ignore="ImageContrastCheck" />

		<TextView
			android:id="@+id/tv_item_description"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:ellipsize="end"
			android:maxLines="2"
			android:paddingHorizontal="@dimen/padding_medium"
			android:textAppearance="?attr/textAppearanceLabelMedium"
			tools:text="Lorem ipsum dor." />
	</LinearLayout>
</com.google.android.material.card.MaterialCardView>
